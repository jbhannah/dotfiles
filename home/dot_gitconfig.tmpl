[user]
        name = Jesse Brooklyn Hannah
        email = jesse@jbhannah.net
        signingkey = 99854477
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
[color "status"]
        added = yellow
        changed = green
        untracked = cyan
[commit]
        gpgSign = true
[core]
        autocrlf = input
[diff]
        compactionHeuristic = true
[fetch]
        prune = true
[format]
        pretty = custom-medium
[github]
        user = jbhannah
[hub]
        protocol = https
[init]
        defaultBranch = trunk
[log]
        showSignature = true
[pretty]
        custom-brief = "format:%C(green)%h%C(reset) %s%n%C(blue)(%ar by %an)%C(red)%d%C(reset)%n"
        custom-medium = "format:%C(bold)Commit:%C(reset) %C(green)%H%C(red)%d%n%C(bold)Author:%C(reset) %C(cyan)%an <%ae>%n%C(bold)Date:%C(reset)   %C(blue)%ai (%ar)%C(reset)%n%+B"
        custom-oneline = "format:%C(green)%h%C(reset) %s%C(red)%d%C(reset)%n"
[pull]
        rebase = true
[tag]
        forceSignAnnotated = true

{{- if eq .chezmoi.os "darwin" }}
[credential]
        helper = osxkeychain
[gpg]
        program = /usr/local/MacGPG2/bin/gpg2
{{- end }}
